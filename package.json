{
  "name": "make-stateful",
  "version": "2.0.1",
  "description": "Turns your JavaScript objects into little state machines.",
  "main": "lib/index.js",
  "jsnext:main": "src/index.js",
  "scripts": {
    "clean": "rimraf lib dist",
    "test": "mocha --compilers js:babel-core/register spec",
    "lint": "eslint src spec",
    "lint:fix": "eslint src spec --fix",
    "check": "npm run lint && npm run test",
    "build:lib": "babel src --out-dir lib",
    "build:umd": "webpack src/index.js dist/make-stateful.js --config webpack.config.development.js",
    "build:umd:min": "cross-env NODE_ENV=production webpack src/index.js dist/make-stateful.min.js --config webpack.config.production.js",
    "build": "npm run build:lib && npm run build:umd && npm run build:umd:min",
    "preversion": "npm run clean && npm run check",
    "version": "npm run build",
    "postversion": "git push && git push --tags && npm run clean",
    "prepublish": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TannerRogalsky/make-stateful.git"
  },
  "keywords": [
    "stateful",
    "state",
    "machine",
    "FSM"
  ],
  "author": "Tanner Rogalsky",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TannerRogalsky/make-stateful/issues"
  },
  "homepage": "https://github.com/TannerRogalsky/make-stateful",
  "devDependencies": {
    "babel-cli": "^6.0.15",
    "babel-core": "^6.1.2",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^6.1.0",
    "babel-plugin-typecheck": "^3.0.0",
    "babel-preset-es2015": "^6.1.2",
    "babel-preset-react": "^6.1.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-uken": "^1.0.3",
    "eslint-plugin-import": "^2.17.3",
    "mocha": "^2.3.3",
    "rimraf": "^2.4.3",
    "should": "^7.1.1",
    "sinon": "^1.17.2",
    "webpack": "^1.12.3"
  },
  "npmName": "make-stateful",
  "npmFileMap": [
    {
      "basePath": "/dist/",
      "files": [
        "*.js"
      ]
    }
  ]
}
